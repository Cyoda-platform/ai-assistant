{
  "initial_state": "none",
  "workflow_name": "chat_entity",
  "states": {
    "none": {
      "transitions": {
        "schedule_deploy_env": {
          "next": "scheduled_deploy_env",
          "action": {
            "name": "process_event",
            "config": {
              "type": "function",
              "publish": true,
              "function": {
                "name": "schedule_deploy_env",
                "description": "",
                "max_iteration": 0
              }
            }
          }
        }
      }
    },
    "scheduled_deploy_env": {
      "transitions": {
        "lock_chat": {
          "next": "locked_chat_while_deployment",
          "action": {
            "name": "process_event",
            "config": {
              "type": "function",
              "publish": true,
              "function": {
                "name": "lock_chat",
                "description": "",
                "max_iteration": 0
              }
            }
          }
        }
      }
    },
    "locked_chat_while_deployment": {
      "transitions": {
        "finish_deployment_success": {
          "next": "deployed_env",
          "manual": true,
          "action": {
            "name": "process_event",
            "config": {
              "type": "notification",
              "notification": "✅ Your [Cyoda environment](https://{cyoda_env_name}) has been successfully deployed!\n\nYou can now proceed to setting up the application locally.",
              "publish": true,
              "allow_anonymous_users": true
            }
          }
        },
        "finish_deployment_failure": {
          "next": "deployed_env",
          "manual": true,
          "action": {
            "name": "process_event",
            "config": {
              "type": "notification",
              "notification": "⚠️ Sorry, we encountered internal issues while deploying your Cyoda environment.\n\nOur team has been notified and is looking into it. Please try again shortly, or reach out if the issue persists. You can proceed with the current chat.",
              "publish": true,
              "allow_anonymous_users": true
            }
          }
        }
      }
    },
    "deployed_env": {
      "transitions": {
        "lock_chat": {
          "next": "locked_chat",
          "action": {
            "name": "process_event",
            "config": {
              "type": "function",
              "publish": true,
              "function": {
                "name": "lock_chat",
                "description": "",
                "max_iteration": 0
              }
            }
          }
        }
      }
    }
  }
}

